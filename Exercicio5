using System;

class Program
{
    static void Main()
    {
        Console.Write("Digite o valor do raio da esfera: ");
        double raio = Convert.ToDouble(Console.ReadLine());

        double pi = Math.PI;

        double comprimento = 2 * pi * raio;

        double area = 4 * pi * Math.Pow(raio, 2);

        double volume = (4.0 / 3.0) * pi * Math.Pow(raio, 3);

        Console.WriteLine($"O comprimento da esfera é: " + comprimento);
        Console.WriteLine($"A área da esfera é: " + area);
        Console.WriteLine($"O volume da esfera é: " + volume);
    }
}
